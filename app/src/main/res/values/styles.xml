<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#f40202</item>
    </style>

    <style name="team_name">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#0f1e80</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="score">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">40sp</item>
        <item name="android:background">#e4e4e4</item>
    </style>

    <style name="but">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#f40202</item>
    </style>

    <style name="reset">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#0f1e80</item>
    </style>
</resources>
